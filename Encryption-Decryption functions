
#include <stdio.h>
#include <string.h>
#include <stdlib.h>

/*Work in progress*/

void encryptFile(char plainstring[]){
    char key[10];
    int i;
    int len = strlen(plainstring);
    char ciphertext[len+1];

    printf("Please input a password and safely remember it: ");
    fgets(key, 10, stdin);
    flush(key, 10);
    
    /*encrypting data*/
    for(i=0; i < strlen(plainstring); i++){
        ciphertext[i] = plainstring[i] ^ key[i % strlen(key)];
    }
    ciphertext[len] = '\0';


    /*open file to edit*/
    FILE *dataFile = fopen("dataFile.txt", "w");

    for(i=0; i < len; i++){
    printf("%02X ", (unsigned char)ciphertext[i]);
    fprintf(dataFile, "%02X ", (unsigned char)ciphertext[i]);
    }
    fclose(dataFile);
}
